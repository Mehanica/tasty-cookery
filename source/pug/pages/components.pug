extends ../base/layout

block data
  include ../data/filter-data

block variables
  - var title = "Компоненты"
  - var wrapperMod = ""
  - var currentPage = ""

block main
  style.
    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      display: inline-block;
      margin-bottom: 10px;
      margin-left: 7px;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .components-wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1em;
    }

    .components-wrapper--1 {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      grid-auto-flow: row;
      gap: 1em;
    }

    .components-wrapper--2 {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
      grid-auto-flow: row;
      gap: 1em;
    }

    .components-wrapper--3 {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto;
      grid-auto-flow: row;
      gap: 1em;
    }

    .components-wrapper code {
      display: block;
      margin: 10px 0;
      padding: 10px;
    }

    .container > section {
      padding: 20px 0;
    }

  main
    .container
      a.components-backwards(href="index.html")
        span &larr;
        span вернуться на разводящую
      h1 Компоненты, используемые в вёрстке

      section
        h2 Название компонента или группы компонентов

        p Класс компонента \ модификаторы
        code(style="color: white; background-color: #E95836;") При необходимости, подсказки \ предупреждение \ важная информация
        div Компонент

